{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./src/@types", "node_modules/@types"],
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "exclude": ["__tests__", "node_modules"]
}
